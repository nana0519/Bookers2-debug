<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Followed Users</h1>
      <% if @users.count == 0 %>
        <p>ユーザーはいません</p>
      <% else %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
            <tr>
              <% @users.each do |user| %>
               <td>
                 <%=image_tag user.get_profile_image, size: '50x50'  %>
               </td>
               <td><%= user.name %></td>
               <td>フォロー数：<%= @user.followeds.count %></td>
               <td>フォロワー数：<%= @user.followers.count %></td>
               <td>
                 <%= link_to "Show", user_path(user) %>
               </td>
              <% end %>
            </tr>
          </tbody>
          
       </table>
      <% end %>
    </div>
  </div>
</div>